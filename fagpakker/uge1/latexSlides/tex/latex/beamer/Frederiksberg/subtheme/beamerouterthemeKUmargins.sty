\ProvidesPackage{beamerouterthemeKUmargins}[2009/07/28]

\newif\ifKUmargins@wide
\KUmargins@widefalse

\DeclareOptionBeamer{wide}[]{\KUmargins@widetrue}
\DeclareOptionBeamer{narrow}[]{\KUmargins@widefalse}
\ProcessOptionsBeamer

\mode<presentation>

\ifKUmargins@wide
  \setbeamersize{text margin left=.08\paperwidth,
                 text margin right=.08\paperwidth}
\else
  \setbeamersize{text margin left=.1138\paperwidth,
                 text margin right=.1138\paperwidth}
\fi

\mode
<all>

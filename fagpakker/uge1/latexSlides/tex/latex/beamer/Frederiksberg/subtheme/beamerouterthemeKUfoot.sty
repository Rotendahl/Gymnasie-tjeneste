\ProvidesPackage{beamerouterthemeKUfoot}[2009/08/25]

\RequirePackage{KUcommon}
\KU@needfoot
\KUfootstyle{low}% default

\newif\ifKUfoot@keeprightsidebar
\KUfoot@keeprightsidebarfalse

\DeclareOptionBeamer{style}[low]{\KUfootstyle{#1}}
\DeclareOptionBeamer{logoplace}[right]{\KUlogoplace{#1}}
\DeclareOptionBeamer{logostyle}[auto]{\KUlogostyle{#1}}
\DeclareOptionBeamer{logoline}[auto]{\KUlogoline{#1}}
\DeclareOptionBeamer{nologo}[]{\KU@nologotrue}
\DeclareOptionBeamer{noline}[]{\KU@nolinetrue}
\DeclareOptionBeamer{totalframes}[show]{\KUtotalframes{#1}}
\DeclareOptionBeamer{sep}[{ --- }]{\KUfootsep{#1}}
\DeclareOptionBeamer{fnolabel}{\KUfootfnolabel{#1}}
\DeclareOptionBeamer{keeprightsidebar}[]{\KU@keeprightsidebartrue}

\ProcessOptionsBeamer

\mode<presentation>

% Footlines
\defbeamertemplate*{footline}{KU}{%
  \KUfoot@active%
}

\ifKUfoot@keeprightsidebar\else
  \defbeamertemplate*{sidebar right}{KU empty}
  {
  % empty - no navigation symbols or logo
  }
\fi

\mode
<all>
